<?xml version="1.0" encoding="utf-8"?>
<it.polimi.stopit.layoutImplementations.WearableChallengeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/holo_blue_bright">


    <TextView
        android:id="@+id/opponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-condensed-light"
        android:lineSpacingExtra="-4sp"
        android:textColor="@color/textColorSecondary"
        android:textSize="22sp" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/opponentPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        app:border_color="#EEEEEE"
        app:border_width="0dp"
        app:shadow="true"
        app:shadow_color="@color/shadows"
        app:shadow_radius="2" />

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-condensed-light"
        android:lineSpacingExtra="-4sp"
        android:textColor="@color/textColorSecondary"
        android:textSize="25sp"
        android:shadowRadius="2"
        android:shadowColor="@android:color/darker_gray"/>

</it.polimi.stopit.layoutImplementations.WearableChallengeItemLayout>