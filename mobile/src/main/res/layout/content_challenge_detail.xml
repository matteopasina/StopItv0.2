<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="100dp"
    tools:context="it.polimi.stopit.activities.ChallengeDetail"
    tools:showIn="@layout/activity_challenge_detail">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/yourPic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            app:border_color="#EEEEEE"
            app:border_width="0dp"
            app:shadow="true"
            app:shadow_color="@color/shadows"
            app:shadow_radius="5" />

        <TextView
            android:id="@+id/you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yourPic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:shadowColor="@color/shadows"
            android:text="You"
            android:textColor="@color/textColorSecondary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/yourPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/you"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:shadowColor="@color/shadows"
            android:textColor="@color/buttonBackground"
            android:textSize="25sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/VS"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/versus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/VS"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="110dp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/VS"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="160dp"/>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/opponentPic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            app:border_color="#EEEEEE"
            app:border_width="0dp"
            app:shadow="true"
            app:shadow_color="@color/shadows"
            app:shadow_radius="5" />

        <TextView
            android:id="@+id/vsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/opponentPic"
            android:layout_marginTop="10dp"
            android:shadowColor="@color/shadows"
            android:textColor="@color/textColorSecondary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/opponentPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vsName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:shadowColor="@color/shadows"
            android:textColor="@color/buttonBackground"
            android:textSize="25sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/pointText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:text="Points"
        android:textColor="@color/textColorSecondary"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/progress_challenge"
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:background="@drawable/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@id/pointText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:max="100" />

    <TextView
        android:id="@+id/timeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_challenge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:shadowColor="@color/shadows"
        android:textColor="@color/textColorSecondary"
        android:textSize="16sp" />

    <Button
        android:id="@+id/give_up"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/timeLeft"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonsquare"
        android:textColor="@color/white" />

</RelativeLayout>

