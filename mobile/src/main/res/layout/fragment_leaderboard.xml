<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="25dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/leaderboard_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="22dp"/>

            </RelativeLayout>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/leaderboad_profilepic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="40dp"
                app:shadow="true"
                app:shadow_radius="5"
                app:shadow_color="@color/shadows"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/leaderboard_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/leaderboad_profilepic"
                android:layout_marginLeft="10dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_centerVertical="true"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/leaderboard_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/textColorSecondary"
                android:layout_centerVertical="true"
                android:textSize="20dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

